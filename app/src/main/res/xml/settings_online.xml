<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.preference.PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android">

    <android.support.v7.preference.PreferenceCategory
        android:title="@string/pref_online_search">

        <android.support.v7.preference.Preference
            android:dialogTitle="@string/pref_online_search_limit_dialog_title"
            android:entries="@array/pref_search_limit"
            android:entryValues="@array/pref_search_limit"

            android:key="pref_search_quick_limit"
            android:summary="@string/pref_online_search_quick_limit_summery"
            android:title="@string/pref_online_search_quick_limit"/>

        <android.support.v7.preference.Preference
            android:dialogTitle="@string/pref_online_search_limit_dialog_title"
            android:entries="@array/pref_search_limit"
            android:entryValues="@array/pref_search_limit"

            android:key="pref_search_full_limit"
            android:summary="@string/pref_online_search_full_limit_summery"
            android:title="@string/pref_online_search_full_limit"/>

    </android.support.v7.preference.PreferenceCategory>

</android.support.v7.preference.PreferenceScreen>